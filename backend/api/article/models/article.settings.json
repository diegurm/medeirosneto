{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Notícia",
    "description": "Cadastro de nova notícia"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "author": {
      "via": "articles",
      "model": "writer"
    },
    "hat": {
      "type": "string",
      "required": true,
      "default": "Medeiros neto",
      "maxLength": 20
    }
  }
}
